<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_article_category_parent"
    style="@style/SalesIQ.Layout.article_category">

    <ImageView
        android:id="@+id/siq_article_or_category_icon"
        style="@style/SalesIQ.Style.articles_department_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zoho.livechat.android.modules.common.ui.views.MobilistenTextView
        android:id="@+id/siq_category_title"
        style="@style/SalesIQ.Style.articles_category_name_text"
        android:layout_marginStart="@dimen/siq_12"
        android:layout_marginLeft="@dimen/siq_12"
        android:layout_marginEnd="@dimen/siq_45"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/siq_resources_count_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/siq_article_or_category_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/siq_resources_count_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/siq_6"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/siq_article_or_category_icon"
        app:layout_constraintStart_toStartOf="@+id/siq_category_title"
        app:layout_constraintTop_toBottomOf="@+id/siq_category_title"
        app:layout_constraintVertical_chainStyle="packed">

        <com.zoho.livechat.android.modules.common.ui.views.MobilistenTextView
            android:id="@+id/siq_articles_count"
            style="@style/SalesIQ.Style.articles_count_text"
            tools:text="1 Art" />

        <View
            android:id="@+id/siq_article_and_sub_category_separator"
            android:layout_width="@dimen/siq_1"
            android:layout_height="@dimen/siq_13"
            android:layout_marginStart="@dimen/siq_8"
            android:layout_marginLeft="@dimen/siq_8"
            android:layout_gravity="center_vertical"
            android:background="@drawable/siq_article_and_sub_category_separator" />

        <View
            android:id="@+id/siq_article_and_sub_category_spacer"
            android:layout_width="@dimen/siq_8"
            android:layout_height="0dp" />

        <com.zoho.livechat.android.modules.common.ui.views.MobilistenTextView
            android:id="@+id/siq_articles_sub_categories_count"
            style="@style/SalesIQ.Style.articles_sub_categories_count_text"
            tools:text="Test" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/siq_1"
        android:layout_marginTop="@dimen/siq_15"
        android:layout_marginEnd="@dimen/siq_16"
        android:background="?attr/siq_articles_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/siq_resources_count_layout"
        app:layout_constraintTop_toBottomOf="@+id/siq_resources_count_layout" />

    <!--    <TextView-->
    <!--        android:id="@+id/siq_articles_category_count"-->
    <!--        style="@style/SalesIQ.Style.articles_category_count_text"-->
    <!--        app:layout_constraintStart_toEndOf="@+id/siq_articles_count"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/siq_category_title" />-->
</androidx.constraintlayout.widget.ConstraintLayout>