<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/siq_backgroundcolor"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/siq_dialog_toolbar"
            style="?attr/siq_toolbar_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/siq_toolbar_height"
            android:minHeight="@dimen/siq_toolbar_height"
            app:popupTheme="@style/SalesIQ.PopupMenuStyle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.gms.maps.MapView
                android:id="@+id/siq_map_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="174dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:id="@+id/siq_map_radius_parent"
                android:layout_gravity="top|end"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="?attr/siq_backgroundcolor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp">

                    <ImageView
                        android:id="@+id/siq_map_radius_icon"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/salesiq_vector_location_radius" />

                    <TextView
                        android:id="@+id/siq_map_radius_text"
                        style="@style/SalesIQ.Style.widget_map_radius_text" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/siq_location_bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="240dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:background="@android:color/transparent"
            android:id="@+id/bottomsheetemptyview"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="vertical" />

        <View
            android:id="@+id/siq_location_bottomsheet_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/salesiq_drawable_top_shadow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/siq_backgroundcolor"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/siq_location_bottom_header"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp">

                <RelativeLayout
                    android:id="@+id/siq_location_bottom_header_imagelayout"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/salesiq_circle_bg"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/siq_location_bottom_header_image"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        app:srcCompat="@drawable/salesiq_vector_mylocation"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/siq_location_bottom_header_imagelayout"
                    android:layout_toRightOf="@+id/siq_location_bottom_header_imagelayout"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/siq_location_bottom_text"
                        android:text="@string/livechat.widgets.location.send.current"
                        style="@style/SalesIQ.Style.widget_location_send_current_text" />

                    <TextView
                        android:id="@+id/siq_location_bottom_subtext"
                        style="@style/SalesIQ.Style.widget_location_meter_text" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1F252b2e" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/siq_location_suggestions_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
