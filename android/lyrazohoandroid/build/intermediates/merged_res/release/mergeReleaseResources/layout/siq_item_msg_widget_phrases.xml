<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_phrases"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/siq_phrases_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        app:cardBackgroundColor="?attr/siq_chat_message_backgroundcolor_operator"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/siq_chat_card_text_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/siq_chat_card_image"
                    style="@style/SalesIQ.Style.chatwindow_widget_image"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp" />

                <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                    android:id="@+id/msg_flex_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/siq_14"
                    android:paddingLeft="@dimen/siq_14"
                    android:paddingTop="@dimen/siq_10"
                    android:paddingEnd="@dimen/siq_14"
                    android:paddingRight="@dimen/siq_14"
                    android:paddingBottom="@dimen/siq_10">

                    <TextView
                        android:id="@+id/siq_chat_card_text"
                        style="@style/SalesIQ.Style.chatwindow_widget_text" />

                    <TextView
                        android:id="@+id/siq_attachment_timetextview"
                        style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                        android:paddingStart="12dp"
                        android:paddingLeft="12dp"
                        android:paddingEnd="0dp"
                        android:paddingRight="0dp"
                        tools:text="12:30PM" />
                </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.zoho.livechat.android.ui.customviews.FlowLayout
        android:id="@+id/siq_phrases_flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/siq_10"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_phrases_card_view" />
</androidx.constraintlayout.widget.ConstraintLayout>