<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_rating_happy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/siq_chat_message_backgroundcolor_operator"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/siq_chat_card_happiness_image"
                style="@style/SalesIQ.Style.chatwindow_widget_image"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                android:id="@+id/siq_chat_card_happiness_flex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/siq_14"
                android:paddingVertical="@dimen/siq_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_happiness_image">

                <TextView
                    android:id="@+id/siq_chat_card_happiness_text"
                    style="@style/SalesIQ.Style.chatwindow_widget_text" />

                <TextView
                    android:id="@+id/siq_chat_card_happiness_flex_timetextview"
                    style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    tools:text="12:30PM" />
            </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>

            <LinearLayout
                android:id="@+id/siq_chat_card_happiness_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingTop="5dp"
                android:paddingEnd="0dp"
                android:paddingBottom="7dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_happiness_flex_layout">

                <LinearLayout
                    android:id="@+id/siq_chat_card_level1_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/siq_chat_card_level1_icon"
                        style="@style/SalesIQ.Style.chatwindow_happiness_rating" />

                    <TextView
                        android:id="@+id/siq_chat_card_level1_text"
                        style="@style/SalesIQ.Style.chatwindow_happiness_text" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siq_chat_card_level2_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/siq_chat_card_level2_icon"
                        style="@style/SalesIQ.Style.chatwindow_happiness_rating" />

                    <TextView
                        android:id="@+id/siq_chat_card_level2_text"
                        style="@style/SalesIQ.Style.chatwindow_happiness_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siq_chat_card_level3_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/siq_chat_card_level3_icon"
                        style="@style/SalesIQ.Style.chatwindow_happiness_rating" />

                    <TextView
                        android:id="@+id/siq_chat_card_level3_text"
                        style="@style/SalesIQ.Style.chatwindow_happiness_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siq_chat_card_level4_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/siq_chat_card_level4_icon"
                        style="@style/SalesIQ.Style.chatwindow_happiness_rating" />

                    <TextView
                        android:id="@+id/siq_chat_card_level4_text"
                        style="@style/SalesIQ.Style.chatwindow_happiness_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siq_chat_card_level5_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <ImageView
                        android:id="@+id/siq_chat_card_level5_icon"
                        style="@style/SalesIQ.Style.chatwindow_happiness_rating" />

                    <TextView
                        android:id="@+id/siq_chat_card_level5_text"
                        style="@style/SalesIQ.Style.chatwindow_happiness_text" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/siq_chat_card_happiness_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_happiness_parent">

                <TextView
                    android:id="@+id/siq_chat_card_happiness_timetextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/siq_12"
                    android:paddingLeft="@dimen/siq_12"
                    android:paddingEnd="@dimen/siq_12"
                    android:paddingRight="@dimen/siq_12"
                    android:paddingBottom="@dimen/siq_10"
                    android:text="12:30PM"
                    android:textSize="@dimen/siq_text_12" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
