<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/siq_backgroundcolor">

    <RelativeLayout
        android:id="@+id/siq_article_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:background="?attr/siq_backgroundcolor"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="@dimen/siq_15"
        android:visibility="gone">

        <View
            android:id="@+id/siq_article_bottom_view_shadow"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="?attr/siq_divider_color"
            android:visibility="gone" />

        <TextView
            android:id="@+id/siq_thanks_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/siq_article_bottom_view_shadow"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/siq_16"
            android:layout_marginTop="@dimen/siq_15"
            android:paddingTop="@dimen/siq_2"
            android:paddingBottom="@dimen/siq_2"
            android:text="@string/articles.feedback.thanks"
            android:textColor="?attr/siq_articles_thanks_for_feedback"
            android:textSize="15sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/siq_like_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/siq_article_bottom_view_shadow"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/siq_16"
            android:layout_marginTop="@dimen/siq_15"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/siq_like_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/salesiq_vector_like" />

                <ImageView
                    android:id="@+id/siq_like_icon_selected"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/siq_like_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/siq_dislike_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/siq_article_bottom_view_shadow"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/siq_15"
            android:layout_marginEnd="@dimen/siq_16"
            android:layout_toEndOf="@+id/siq_like_layout"
            android:layout_toRightOf="@+id/siq_like_layout"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/siq_dislike_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/salesiq_vector_dislike" />

                <ImageView
                    android:id="@+id/siq_dislike_icon_selected"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/siq_dislike_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/siq_article_content_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/siq_article_bottom_view"
        android:background="?attr/siq_backgroundcolor"
        android:orientation="vertical">

        <com.zoho.livechat.android.ui.customviews.ArticleWebView
            android:id="@+id/siq_article_webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/siq_articles_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:backgroundTint="?colorPrimary"
        android:indeterminate="true" />
</RelativeLayout>
