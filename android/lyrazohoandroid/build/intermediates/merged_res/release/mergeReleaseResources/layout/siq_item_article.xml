<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/siq_article_parent"
    style="@style/SalesIQ.Layout.articles">

    <ImageView
        android:id="@+id/siq_article_icon"
        style="@style/SalesIQ.Style.article_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zoho.livechat.android.modules.common.ui.views.MobilistenTextView
        android:id="@+id/siq_article_name"
        style="@style/SalesIQ.Style.article_name_text"
        app:layout_constraintBottom_toTopOf="@+id/siq_article_views"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/siq_article_icon"
        app:layout_constraintTop_toTopOf="@id/siq_article_icon"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.zoho.livechat.android.modules.common.ui.views.MobilistenTextView
        android:id="@+id/siq_article_views"
        style="@style/SalesIQ.Style.article_views_text"
        app:layout_constraintStart_toEndOf="@+id/siq_article_icon"
        app:layout_constraintTop_toBottomOf="@+id/siq_article_name"
        app:layout_constraintBottom_toBottomOf="@+id/siq_article_icon"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/siq_1"
        android:layout_marginTop="@dimen/siq_15"
        android:layout_marginEnd="@dimen/siq_16"
        android:background="?attr/siq_articles_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/siq_article_views"
        app:layout_constraintTop_toBottomOf="@+id/siq_article_views" />
</androidx.constraintlayout.widget.ConstraintLayout>