<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/article_fragment_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/siq_backgroundcolor">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/siq_articles_search_progress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/siq_4"
        android:indeterminateOnly="true"
        android:visibility="gone"
        app:indicatorColor="?attr/colorAccent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/siq_articles_subcategory_toggle_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="@dimen/siq_16"
        android:animateLayoutChanges="true"
        android:weightSum="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_articles_search_progress"
        app:selectionRequired="true"
        app:shapeAppearance="@style/ArticleAndSubCategoryToggleGroupStyle"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/siq_articles_button"
            style="@style/ArticlesAndSubCategoryToggleButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/siq_title_articles"
            app:iconGravity="textStart"
            app:iconSize="@dimen/siq_18"
            app:iconTint="?attr/siq_text_primary_color"
            app:shapeAppearance="@style/ArticleAndSubCategoryToggleGroupStyle"
            app:strokeColor="?attr/siq_slate_grey" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/siq_sub_categories_button"
            style="@style/ArticlesAndSubCategoryToggleButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/siq_title_sub_category"
            app:iconGravity="textStart"
            app:iconSize="@dimen/siq_18"
            app:iconTint="?attr/siq_text_primary_color"
            app:shapeAppearance="@style/ArticleAndSubCategoryToggleGroupStyle"
            app:strokeColor="?attr/siq_slate_grey" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/siq_articles_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:focusedByDefault="true"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_articles_subcategory_toggle_button" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/siq_empty_state_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="siq_empty_state_icon, siq_empty_state_text, siq_empty_state_startchat_layout" />

    <ImageView
        android:id="@+id/siq_empty_state_icon"
        style="@style/SalesIQ.Style.articles_emptyview_image"
        android:src="@drawable/salesiq_articles_empty"
        app:layout_constraintBottom_toTopOf="@+id/siq_empty_state_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/siq_empty_state_text"
        style="@style/SalesIQ.Style.articles_emptystate_text"
        android:text="@string/articles.emptystate"
        app:layout_constraintBottom_toTopOf="@+id/siq_empty_state_startchat_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_empty_state_icon"
        app:layout_constraintVertical_chainStyle="packed" />

    <RelativeLayout
        android:id="@+id/siq_empty_state_startchat_layout"
        style="@style/SalesIQ.Layout.articles_startchat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_empty_state_text"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/siq_empty_state_button_icon"
            style="@style/SalesIQ.Style.articles_startchat_image"
            app:srcCompat="@drawable/salesiq_vector_chat" />

        <TextView
            android:id="@+id/siq_empty_state_startchat"
            style="@style/SalesIQ.Style.articles_startchat_text"
            android:layout_toEndOf="@+id/siq_empty_state_button_icon"
            android:layout_toRightOf="@+id/siq_empty_state_button_icon"
            android:text="@string/livechat.conversation.startchat" />
    </RelativeLayout>

    <!--    </LinearLayout>-->

    <ProgressBar
        android:id="@+id/siq_articles_progress"
        style="@style/SalesIQ.ProgressBar.articles"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/siq_empty_search_state_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="siq_empty_search_state_icon, siq_empty_search_state_text" />

    <ImageView
        android:id="@+id/siq_empty_search_state_icon"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintBottom_toTopOf="@+id/siq_empty_search_state_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/salesiq_search_empty" />

    <TextView
        android:id="@+id/siq_empty_search_state_text"
        style="@style/SalesIQ.Style.conversation_emptyview_text"
        android:text="@string/articles.search.text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_empty_search_state_icon"
        app:layout_constraintVertical_bias="0" />
</androidx.constraintlayout.widget.ConstraintLayout><!--</ScrollView>-->