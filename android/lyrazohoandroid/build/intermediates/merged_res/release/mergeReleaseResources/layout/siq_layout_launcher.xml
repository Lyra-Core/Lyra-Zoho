<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/siq_launcher_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="8dp"
    android:hapticFeedbackEnabled="true">

    <FrameLayout
        android:id="@+id/siq_parent_layout"
        style="@style/SalesIQ.Style.launcher">

        <FrameLayout
            android:id="@+id/siq_launcher_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/siq_launcher_image"
                style="@style/SalesIQ.Style.launcher_imageview"
                app:srcCompat="@drawable/salesiq_vector_chat_floating" />

            <TextView
                android:id="@+id/siq_launcher_badge"
                style="@style/SalesIQ.Style.launcher_textview"
                android:visibility="gone"
                android:layout_gravity="top|right" />

        </FrameLayout>
    </FrameLayout>
</FrameLayout>
