<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_calendar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/siq_chat_message_backgroundcolor_operator"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/siq_chat_card_image"
                style="@style/SalesIQ.Style.chatwindow_widget_image"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                android:id="@+id/calendar_flex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/siq_14"
                android:paddingTop="@dimen/siq_10"
                android:paddingBottom="@dimen/siq_6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_image">

                <TextView
                    android:id="@+id/siq_chat_calendar_card_text"
                    style="@style/SalesIQ.Style.chatwindow_widget_text" />

                <LinearLayout
                    android:id="@+id/siq_flex_calendar_status_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="1dp"
                    android:paddingRight="1dp">

                    <TextView
                        android:id="@+id/siq_flex_calendar_timetextview"
                        style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                        tools:text="12:30PM" />
                </LinearLayout>
            </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>


            <TextView
                android:id="@+id/siq_calendar_timetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/siq_12"
                android:paddingLeft="@dimen/siq_12"
                android:paddingEnd="@dimen/siq_14"
                android:paddingRight="@dimen/siq_14"
                android:paddingBottom="@dimen/siq_10"
                android:textSize="@dimen/siq_text_12"
                style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calendar_flex_layout"
                tools:text="12:30PM" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_calendar_timetextview">

                <LinearLayout
                    android:id="@+id/siq_chat_card_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/salesiq_links_list_bg"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <ImageView
                        android:id="@+id/siq_chat_card_button_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        app:srcCompat="@drawable/salesiq_vector_calendar" />

                    <TextView
                        android:id="@+id/siq_chat_card_button_text"
                        style="@style/SalesIQ.Style.chatwindow_widget_button_text"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
