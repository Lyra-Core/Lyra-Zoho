<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_msg_audio_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/siq_10"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/siq_audioparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/salesiq_stroked_rounded_corners"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/siq_2"
            android:paddingTop="@dimen/siq_2">

            <LinearLayout
                android:id="@+id/siq_audio_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/salesiq_stroked_rounded_corners"
                android:orientation="horizontal"
                android:padding="@dimen/siq_10"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2">

                    <RelativeLayout
                        android:id="@+id/siq_audio_download_parent"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <RelativeLayout
                            android:id="@+id/siq_audio_download_progress_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/siq_audio_cancel_icon"
                                style="@style/SalesIQ.Style.chatwindow_attachment_cancel_image"
                                app:srcCompat="@drawable/salesiq_vector_cancel_light" />

                            <com.zoho.livechat.android.ui.customviews.CircularProgressView
                                android:id="@+id/siq_audio_progressbar"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerHorizontal="true"
                                android:max="100"
                                android:visibility="visible" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/siq_action_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp">

                        <ImageView
                            android:id="@+id/siq_audio_action_icon"
                            style="@style/SalesIQ.Style.chatwindow_attachment_download_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/salesiq_download_arrow" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/siq_audio_seekbar_parent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.55">

                    <SeekBar
                        android:id="@+id/siq_audio_seekbar"
                        style="@style/SalesIQ.Seekbar.chatwindow_attachment"
                        android:progress="0" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/siq_audio_duration_parent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">

                    <TextView
                        android:id="@+id/siq_audio_duration"
                        style="@style/SalesIQ.Style.chatwindow_audio_duration_text"
                        tools:text="0.75 MB" />
                </RelativeLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/siq_audio_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/siq_backgroundcolor"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingEnd="@dimen/siq_12"
                android:paddingRight="@dimen/siq_12"
                android:paddingBottom="@dimen/siq_10"
                app:layout_constraintTop_toBottomOf="@+id/siq_audio_layout">

                <TextView
                    android:id="@+id/siq_audio_timeView"
                    style="@style/SalesIQ.Style.chatwindow_time_textcolor_visitor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/siq_audio_status_icon"
                    android:layout_marginEnd="@dimen/siq_4"
                    android:layout_marginRight="@dimen/siq_4"
                    tools:text="12:30PM" />

                <ImageView
                    android:id="@+id/siq_audio_status_icon"
                    style="@style/SalesIQ.Style.ChatWindow_Message_Status_Icon"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/siq_audio_timeView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/siq_audio_timeView"
                    app:srcCompat="@drawable/salesiq_deliver" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                android:id="@+id/siq_audio_flex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/siq_12"
                android:paddingVertical="@dimen/siq_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_audio_status_layout">

                <TextView
                    android:id="@+id/siq_audio_commentView"
                    style="@style/SalesIQ.Style.ChatWindow_TextMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/siq_audio_flex_status_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <TextView
                        android:id="@+id/siq_audio_flex_timeView"
                        style="@style/SalesIQ.Style.chatwindow_time_textcolor_visitor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:text="12:30PM" />

                    <ImageView
                        android:id="@+id/siq_audio_flex_status_icon"
                        style="@style/SalesIQ.Style.ChatWindow_Message_Status_Icon"
                        app:layout_constraintBottom_toBottomOf="@+id/siq_audio_flex_timeView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/siq_audio_flex_timeView"
                        app:layout_constraintTop_toTopOf="@+id/siq_audio_flex_timeView"
                        app:srcCompat="@drawable/salesiq_read" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>