<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_msg_att_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:orientation="vertical"
    android:padding="@dimen/siq_2">

    <RelativeLayout
        android:id="@+id/siq_fileparent"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:paddingStart="@dimen/siq_12"
        android:paddingLeft="@dimen/siq_12"
        android:paddingEnd="@dimen/siq_2"
        android:paddingRight="@dimen/siq_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/siq_att_download_parent"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:id="@+id/siq_att_icon_parent"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/siq_att_icon"
                    style="@style/SalesIQ.Style.chatwindow_file_image"
                    app:srcCompat="@drawable/salesiq_message_file" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/siq_att_download_button"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/siq_att_action_icon"
                    style="@style/SalesIQ.Style.chatwindow_action_icon"
                    app:srcCompat="@drawable/salesiq_download_arrow" />

                <com.zoho.livechat.android.ui.customviews.CircularProgressView
                    android:id="@+id/siq_att_progressbar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:max="100"
                    android:visibility="visible" />
            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/siq_10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/siq_2"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toEndOf="@+id/siq_att_download_parent"
            android:layout_toRightOf="@+id/siq_att_download_parent"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/siq_att_name"
                    style="@style/SalesIQ.Style.chatwindow_attachment_name_text"
                    tools:text="File name" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/siq_4"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/siq_att_size"
                        style="@style/SalesIQ.Style.chatwindow_attachment_size_text" />

                    <View
                        android:id="@+id/siq_att_file_dot_separator"
                        android:layout_width="@dimen/siq_4"
                        android:layout_height="@dimen/siq_4"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/siq_6"
                        android:layout_marginLeft="@dimen/siq_6"
                        android:background="@drawable/salesiq_badge_background" />

                    <TextView
                        android:id="@+id/siq_att_file_ext"
                        style="@style/SalesIQ.Style.chatwindow_file_extension_text" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/siq_att_status_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/siq_backgroundcolor"
        android:gravity="end"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="@dimen/siq_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_fileparent">

        <TextView
            android:id="@+id/siq_att_timeView"
            style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
            android:layout_marginEnd="@dimen/siq_4"
            android:layout_marginRight="@dimen/siq_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/siq_att_status_icon"
            tools:text="12:30PM" />

        <ImageView
            android:id="@+id/siq_att_status_icon"
            style="@style/SalesIQ.Style.ChatWindow_Message_Status_Icon"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/siq_att_timeView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/siq_att_timeView"
            app:srcCompat="@drawable/salesiq_deliver" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
        android:id="@+id/siq_att_flex_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/siq_12"
        android:paddingLeft="@dimen/siq_12"
        android:paddingTop="@dimen/siq_10"
        android:paddingEnd="@dimen/siq_12"
        android:paddingRight="@dimen/siq_12"
        android:paddingBottom="@dimen/siq_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_att_status_layout">

        <TextView
            android:id="@+id/siq_att_comment"
            style="@style/SalesIQ.Style.ChatWindow_TextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/siq_flex_att_status_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/siq_flex_attachment_timetextview"
                style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="12:30PM" />

            <ImageView
                android:id="@+id/siq_flex_attachment_status_icon"
                style="@style/SalesIQ.Style.ChatWindow_Message_Status_Icon"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/siq_flex_attachment_timetextview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/siq_flex_attachment_timetextview"
                app:layout_constraintTop_toTopOf="@id/siq_flex_attachment_timetextview"
                app:srcCompat="@drawable/salesiq_sending" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>
</androidx.constraintlayout.widget.ConstraintLayout>