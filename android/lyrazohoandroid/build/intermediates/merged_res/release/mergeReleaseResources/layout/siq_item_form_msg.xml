<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/siq_form_msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/siq_msg_text_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/salesiq_bg_form_idle"
        android:orientation="vertical">

        <EditText
            android:id="@+id/siq_msg_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/transparent"
            android:gravity="top|start"
            android:inputType="textMultiLine|textCapSentences"
            android:lineSpacingExtra="8sp"
            android:minLines="5"
            android:scrollbars="vertical"
            android:textColor="?attr/siq_forms_inputfield_textcolor"
            android:textColorHint="?attr/siq_hint_textcolor"
            android:textSize="16sp"
            android:textStyle="normal"
            android:hint="@string/livechat.message.input.hint"/>
    </LinearLayout>

    <TextView
        android:id="@+id/siq_msg_input_error"
        android:layout_below="@id/siq_msg_text_parent"
        android:text="error"
        style="@style/SalesIQ.Style.forms_error_text" />
</RelativeLayout>
