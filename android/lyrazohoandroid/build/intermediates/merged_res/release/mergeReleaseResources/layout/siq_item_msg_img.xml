<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_msg_img_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/siq_bg_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/siq_12"
        app:cardElevation="0dp"
        app:contentPadding="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/siq_12"
            app:cardElevation="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/siq_imageparent"
                    android:layout_width="match_parent"
                    android:layout_height="168dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/siq_msg_att_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:transitionName="message_image_view" />

                        <View
                            android:id="@+id/siq_msg_att_img_blur"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="visible" />
                    </RelativeLayout>

                    <include layout="@layout/salesiq_center_image_message_action_view" />

                    <RelativeLayout
                        android:id="@+id/siq_attachment_detail_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="@dimen/siq_6"
                        android:layout_marginLeft="@dimen/siq_6"
                        android:layout_marginBottom="@dimen/siq_6"
                        android:background="@drawable/siq_video_detail_bg">

                        <LinearLayout
                            android:id="@+id/siq_attachment_detail_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/siq_5">

                            <ImageView
                                android:id="@+id/siq_attachment_icon"
                                android:layout_width="@dimen/siq_15"
                                android:layout_height="@dimen/siq_15"
                                app:srcCompat="@drawable/salesiq_vector_video" />

                            <TextView
                                android:id="@+id/siq_attachment_detail_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/siq_6"
                                android:layout_marginLeft="@dimen/siq_6"
                                android:textSize="@dimen/siq_text_12" />
                        </LinearLayout>

                    </RelativeLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/siq_image_status_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="@dimen/siq_6"
                        android:layout_marginRight="@dimen/siq_6"
                        android:layout_marginBottom="@dimen/siq_6"
                        android:paddingLeft="@dimen/siq_4"
                        android:paddingStart="@dimen/siq_4"
                        android:paddingTop="@dimen/siq_4"
                        android:paddingBottom="@dimen/siq_4"
                        android:paddingEnd="@dimen/siq_8"
                        android:paddingRight="@dimen/siq_8"
                        android:background="@drawable/siq_video_detail_bg">


                        <TextView
                            android:id="@+id/siq_image_timeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/siq_4"
                            android:layout_marginLeft="@dimen/siq_4"
                            android:textSize="@dimen/siq_text_12"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:text="12:30PM" />

                        <ImageView
                            android:id="@+id/siq_image_status_icon"
                            style="@style/SalesIQ.Style.ChatWindow_Message_Status_Icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/siq_image_timeView"
                            app:layout_constraintBottom_toBottomOf="@+id/siq_image_timeView"
                            app:layout_constraintStart_toEndOf="@+id/siq_image_timeView"
                            app:srcCompat="@drawable/salesiq_deliver" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>

                <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                    android:id="@+id/msg_flex_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/siq_12"
                    android:paddingTop="@dimen/siq_10"
                    android:paddingBottom="@dimen/siq_8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/siq_imageparent">

                    <TextView
                        android:id="@+id/siq_img_comment"
                        style="@style/SalesIQ.Style.ChatWindow_TextMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/siq_image_flex_status_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:paddingLeft="12dp"
                        android:paddingEnd="0dp"
                        android:paddingRight="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/siq_image_flex_timetextview"
                            style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="12:30PM" />

                        <ImageView
                            android:id="@+id/siq_image_flex_status_icon"
                            style="@style/SalesIQ.Style.ChatWindow_Message_Status_Icon"
                            app:layout_constraintBottom_toBottomOf="@+id/siq_image_flex_timetextview"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/siq_image_flex_timetextview"
                            app:layout_constraintTop_toTopOf="@+id/siq_image_flex_timetextview"
                            app:srcCompat="@drawable/salesiq_deliver" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</LinearLayout>