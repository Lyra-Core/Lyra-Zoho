<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_gravity="center"
    app:cardCornerRadius="4dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="?attr/siq_backgroundcolor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/siq_timeslot_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/siq_timeslot_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="74dp"
            android:minHeight="36dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/siq_timeslot_text"
                style="@style/SalesIQ.Style.widget_timeslot_text" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>