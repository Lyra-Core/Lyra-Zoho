<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/siq_backgroundcolor"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/siq_dialog_toolbar"
        style="?attr/siq_toolbar_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/siq_toolbar_height"
        android:minHeight="@dimen/siq_toolbar_height"
        app:popupTheme="@style/SalesIQ.PopupMenuStyle" />

    <RelativeLayout
        android:id="@+id/siq_timeslot_tz_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="?attr/siq_backgroundcolor">

            <TextView
                android:id="@+id/siq_tz_title"
                android:text="@string/livechat.widgets.calendar.timezone"
                style="@style/SalesIQ.Style.widget_timezone_title_text" />

            <ImageView
                android:id="@+id/siq_dialog_tz_nav"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="14dp"
                android:tint="?attr/siq_time_zone_navigate_next_icon_color"
                app:srcCompat="@drawable/salesiq_vector_nav_right" />

            <TextView
                android:id="@+id/siq_tz"
                android:layout_toLeftOf="@+id/siq_dialog_tz_nav"
                android:layout_toStartOf="@+id/siq_dialog_tz_nav"
                style="@style/SalesIQ.Style.widget_timezone_text" />
        </RelativeLayout>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/siq_timeslot_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:paddingLeft="17dp"
        android:paddingRight="17dp"
        android:paddingBottom="17dp"
        android:clipToPadding="false"
        android:background="?attr/siq_backgroundcolor" />
</LinearLayout>
