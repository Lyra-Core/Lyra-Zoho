<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/siq_forms_backgroundcolor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/siq_submit_button"
            style="@style/SalesIQ.Layout.forms_submit">
            <TextView
                android:id="@+id/siq_submit_button_text"
                android:text="@string/livechat.prechatform.submit"
                android:fontFamily="sans-serif-medium"
                style="@style/SalesIQ.Style.forms_submit_text"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/siq_submit_button">

            <LinearLayout
                android:id="@+id/siq_form_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>