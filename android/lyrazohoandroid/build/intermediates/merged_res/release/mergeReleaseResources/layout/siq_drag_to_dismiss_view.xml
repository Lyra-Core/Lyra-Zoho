<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone"
    tools:visibility="visible">

    <com.zoho.livechat.android.modules.common.ui.views.MobilistenTextView
        android:id="@+id/drag_here_to_dismiss_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:letterSpacing="0.04"
        android:lineSpacingExtra="@dimen/siq_text_1"
        android:text="@string/mobilisten_launcher_drag_here_to_dismiss"
        android:textColor="@color/siq_white"
        android:textSize="@dimen/siq_text_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@color/siq_black" />

    <View
        android:id="@+id/siq_drag_to_dismiss_view_outer_background_view"
        android:layout_width="@dimen/launcher_dismiss_view_expanded_size"
        android:layout_height="@dimen/launcher_dismiss_view_expanded_size"
        android:layout_marginTop="@dimen/siq_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drag_here_to_dismiss_text_view" />

    <View
        android:id="@+id/siq_drag_to_dismiss_background_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/siq_4"
        android:background="@drawable/salesiq_circle_bg"
        android:backgroundTint="?attr/siq_launcher_dismiss_view_background_color"
        app:layout_constraintBottom_toBottomOf="@id/siq_drag_to_dismiss_view_outer_background_view"
        app:layout_constraintEnd_toEndOf="@id/siq_drag_to_dismiss_view_outer_background_view"
        app:layout_constraintStart_toStartOf="@id/siq_drag_to_dismiss_view_outer_background_view"
        app:layout_constraintTop_toTopOf="@id/siq_drag_to_dismiss_view_outer_background_view"
        tools:backgroundTint="@color/siq_black" />

    <ImageView
        android:id="@+id/siq_drag_to_dismiss_close_icon_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/salesiq_ic_close"
        app:layout_constraintBottom_toBottomOf="@id/siq_drag_to_dismiss_background_view"
        app:layout_constraintEnd_toEndOf="@id/siq_drag_to_dismiss_background_view"
        app:layout_constraintStart_toStartOf="@id/siq_drag_to_dismiss_background_view"
        app:layout_constraintTop_toTopOf="@id/siq_drag_to_dismiss_background_view"
        app:tint="?attr/siq_launcher_dismiss_view_close_icon_color" />
</androidx.constraintlayout.widget.ConstraintLayout>