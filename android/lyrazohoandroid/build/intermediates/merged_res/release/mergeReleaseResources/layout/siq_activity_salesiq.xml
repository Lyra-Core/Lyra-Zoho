<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/siq_siq_tabview"
        style="@style/SalesIQ.Style.tablayout"
        android:background="?attr/siq_tabbar_backgroundcolor"
        app:tabBackground="@drawable/salesiq_tab_indicator" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/siq_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/siq_live_chat_toolbar"
            style="?attr/siq_toolbar_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/siq_toolbar_height"
            android:minHeight="@dimen/siq_toolbar_height"
            app:popupTheme="@style/SalesIQ.PopupMenuStyle" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/siq_offline_message"
        style="@style/SalesIQ.Style.conversation_offline_message_text"
        android:layout_height="wrap_content"
        android:layout_below="@+id/siq_app_bar_layout"
        android:text="@string/livechat.messages.offline"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <com.zoho.livechat.android.ui.customviews.CustomViewPager
        android:id="@+id/siq_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/siq_siq_tabview"
        android:layout_below="@+id/siq_offline_message"
        android:fitsSystemWindows="true" />

    <FrameLayout
        android:id="@+id/siq_fab_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">

        <include layout="@layout/siq_item_fab" />

    </FrameLayout>
</RelativeLayout>
