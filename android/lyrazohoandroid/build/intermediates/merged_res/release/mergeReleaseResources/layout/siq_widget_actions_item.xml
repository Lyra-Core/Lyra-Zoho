<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/siq_chat_card_actions_parent"
        android:padding="14dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="?android:attr/selectableItemBackground">
        <TextView
            android:id="@+id/siq_chat_card_action_label"
            style="@style/SalesIQ.Style.widget_link_text"/>
        <ProgressBar
            android:id="@+id/siq_chat_card_action_progressbar"
            android:layout_width="@dimen/siq_18"
            android:layout_height="@dimen/siq_18"
            android:visibility="gone"
            android:indeterminate="true">
        </ProgressBar>
    </LinearLayout>
    <View
        android:id="@+id/siq_chat_card_actions_divider"
        style="@style/SalesIQ.View.widget_link_divider"/>
</LinearLayout>
