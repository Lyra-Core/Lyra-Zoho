<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout"
    android:background="?attr/siq_backgroundcolor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/siq_articles_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/siq_toolbar_height"
        android:minHeight="@dimen/siq_toolbar_height"
        style="?attr/siq_toolbar_style"
        app:popupTheme="@style/SalesIQ.PopupMenuStyle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/siq_articles_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/siq_chat_progress"
            android:indeterminate="true" />
    </RelativeLayout>
</LinearLayout>
