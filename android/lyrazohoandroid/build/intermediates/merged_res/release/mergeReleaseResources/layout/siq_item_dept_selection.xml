<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/siq_dept_suggestion_card_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="6dp"
    android:layout_marginRight="6dp"
    app:cardBackgroundColor="?attr/siq_backgroundcolor"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/siq_dept_suggestion_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/siq_dept_suggestion_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp">
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/siq_dept_suggestion_status"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/siq_dept_suggestion_text"
                android:text="Production"
                style="@style/SalesIQ.Style.Bot_department_suggestion_textcolor" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>