<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_msg_log"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/siq_chat_message_backgroundcolor_operator">

            <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                android:id="@+id/log_flex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/siq_14"
                android:paddingVertical="@dimen/siq_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/siq_log_info"
                    style="@style/SalesIQ.Style.chatwindow_log_info_text" />

                <!--                <View-->
                <!--                    android:id="@+id/siq_log_time_view"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:paddingStart="12dp"-->
                <!--                    android:paddingLeft="12dp"-->
                <!--                    android:paddingEnd="0dp"-->
                <!--                    android:paddingRight="0dp"/>-->

                <TextView
                    android:id="@+id/siq_log_timetextview"
                    style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                    tools:text="12:30PM"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp" />
                <!--                app:layout_constraintStart_toStartOf="@+id/siq_log_time_view"-->
                <!--                app:layout_constraintEnd_toEndOf="@+id/siq_log_time_view"-->
                <!--                app:layout_constraintTop_toTopOf="@+id/siq_log_time_view"-->
                <!--                app:layout_constraintBottom_toBottomOf="@+id/siq_log_time_view"-->

            </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>

            <TextView
                android:id="@+id/siq_log_button"
                style="@style/SalesIQ.Style.chatwindow_log_button_text"
                android:layout_margin="@dimen/siq_2"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/log_flex_layout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
