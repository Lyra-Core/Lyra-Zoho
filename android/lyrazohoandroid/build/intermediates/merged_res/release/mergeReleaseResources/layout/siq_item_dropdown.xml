<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/siq_dropdown_item_parent"
    android:paddingLeft="@dimen/siq_8"
    android:paddingStart="@dimen/siq_8"
    android:paddingTop="@dimen/siq_15"
    android:paddingBottom="@dimen/siq_15"
    android:paddingRight="@dimen/siq_8"
    android:paddingEnd="@dimen/siq_8"
    android:background="?attr/siq_dialog_background_color">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/siq_dropdown_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/siq_25"
        android:gravity="center"
        android:checked="false" />

    <TextView
        android:id="@+id/siq_dropdown_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxWidth="250dp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textSize="@dimen/siq_text_16"
        android:layout_toRightOf="@+id/siq_dropdown_checkbox"
        android:layout_marginLeft="@dimen/siq_16"
        android:layout_marginStart="@dimen/siq_15"
        android:layout_marginEnd="@dimen/siq_16"
        android:layout_toEndOf="@+id/siq_dropdown_checkbox"
        android:layout_marginRight="@dimen/siq_16" />

</RelativeLayout>
