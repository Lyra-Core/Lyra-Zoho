<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/siq_chat_card_link_parent"
        android:padding="14dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="?android:attr/selectableItemBackground">
        <ImageView
            android:id="@+id/siq_chat_card_link_image"
            style="@style/SalesIQ.Style.widget_link_image"/>
        <TextView
            android:id="@+id/siq_chat_card_link_text"
            style="@style/SalesIQ.Style.widget_link_text"/>
    </LinearLayout>
    <View
        android:id="@+id/siq_chat_card_link_divider"
        style="@style/SalesIQ.View.widget_link_divider"/>
</LinearLayout>
