<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/siq_chat_card_type_articles">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/siq_articles_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/siq_chat_message_backgroundcolor_operator"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/siq_chat_card_image"
                    style="@style/SalesIQ.Style.chatwindow_widget_image"
                android:layout_marginTop="2dp"
                android:layout_marginHorizontal="2dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/siq_chat_card_text"
                        style="@style/SalesIQ.Style.chatwindow_widget_text" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siq_chat_card_articles_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/siq_chat_card_description"
                        style="@style/SalesIQ.Style.widget_description_text" />

                    <LinearLayout
                        android:id="@+id/siq_chat_card_articles_list_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/siq_chat_card_articles_title"
                            style="@style/SalesIQ.Style.widget_articles_title_text" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/siq_chat_card_articles_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/siq_chat_card_links_actionlist_parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_marginTop="16dp"
                android:background="@drawable/salesiq_links_list_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/siq_chat_message_backgroundcolor_operator">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/siq_chat_card_links_actionlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@drawable/salesiq_links_list_bg" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/siq_article_widget_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <TextView
                    android:id="@+id/siq_article_widget_timetextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="12:30PM"
                    android:textSize="@dimen/siq_text_12"
                    android:paddingRight="@dimen/siq_14"
                    android:paddingEnd="@dimen/siq_14"
                    android:paddingLeft="@dimen/siq_12"
                    android:paddingStart="@dimen/siq_12"
                    android:paddingBottom="@dimen/siq_10" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
