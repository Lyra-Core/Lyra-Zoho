<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/siq_form_email"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/siq_email_input_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:id="@+id/siq_email_text_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/salesiq_bg_form_idle"
            android:orientation="vertical">

            <EditText
                android:id="@+id/siq_email_text"
                android:background="@android:color/transparent"
                android:scrollbars="vertical"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                style="@style/SalesIQ.Style.forms_edittext" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/siq_email_label"
                android:text="Email"
                style="@style/SalesIQ.Style.forms_label_text"/>
            <TextView
                android:id="@+id/siq_email_label_mandatory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                android:text="*"
                android:textSize="12sp"
                android:textStyle="normal"
                android:textColor="?attr/siq_forms_mandatory_star_icon_color"/>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/siq_email_input_error"
        android:layout_below="@id/siq_email_input_parent"
        android:text="error"
        style="@style/SalesIQ.Style.forms_error_text" />
</RelativeLayout>
