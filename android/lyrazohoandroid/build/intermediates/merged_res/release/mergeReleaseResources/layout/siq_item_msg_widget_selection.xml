<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_selection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/siq_chat_message_backgroundcolor_operator"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/siq_select_chat_card_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <include
                    layout="@layout/salesiq_center_image_message_action_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/siq_chat_card_image"
                    style="@style/SalesIQ.Style.chatwindow_widget_image"
                    android:layout_marginHorizontal="2dp"
                    android:layout_marginTop="2dp" />
            </RelativeLayout>

            <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                android:id="@+id/siq_selection_widget_flex_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/siq_14"
                android:paddingLeft="@dimen/siq_14"
                android:paddingTop="@dimen/siq_10"
                android:paddingEnd="@dimen/siq_14"
                android:paddingRight="@dimen/siq_14"
                android:paddingBottom="@dimen/siq_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_select_chat_card_layout">

                <TextView
                    android:id="@+id/siq_selection_widget_card_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/siq_chat_card_message_textcolor"
                    android:textSize="@dimen/siq_text_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:id="@+id/siq_flex_selection_widget_status_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/siq_flex_selection_widget_timetextview"
                        style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                        android:layout_gravity="bottom"
                        android:scrollHorizontally="false"
                        tools:text="12:30PM" />
                </LinearLayout>
            </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>

            <com.zoho.livechat.android.ui.customviews.FlowLayout
                android:id="@+id/siq_chat_card_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="12dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_selection_widget_flex_layout" />

            <TextView
                android:id="@+id/siq_selection_widget_timetextview"
                style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/siq_4"
                android:layout_marginBottom="@dimen/siq_10"
                android:paddingStart="@dimen/siq_12"
                android:paddingLeft="@dimen/siq_12"
                android:paddingEnd="@dimen/siq_14"
                android:paddingRight="@dimen/siq_14"
                android:textSize="@dimen/siq_text_12"
                app:layout_constraintBottom_toTopOf="@+id/siq_chat_card_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_options"
                tools:text="12:30PM" />
            <!--            </LinearLayout>-->

            <LinearLayout
                android:id="@+id/siq_chat_card_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/siq_1"
                android:background="@drawable/salesiq_links_list_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_selection_widget_timetextview">

                <TextView
                    android:id="@+id/siq_chat_card_button_text"
                    style="@style/SalesIQ.Style.chatwindow_widget_button_text" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
