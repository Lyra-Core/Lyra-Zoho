<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/siq_resource_header_background_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/siq_minus_12"
        app:layout_constraintBottom_toBottomOf="@+id/siq_resource_header_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/siq_resource_header_title"
        style="@style/ResourceHeaderTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/siq_8"
        android:text="@string/siq_title_articles"
        app:layout_constraintEnd_toStartOf="@+id/siq_resource_header_expand_or_collapse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/siq_resource_header_expand_or_collapse"
        android:layout_width="@dimen/siq_24"
        android:layout_height="@dimen/siq_24"
        android:layout_marginEnd="@dimen/siq_16"
        app:layout_constraintBottom_toBottomOf="@+id/siq_resource_header_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@+id/siq_resource_header_title"
        app:srcCompat="@drawable/ic_salesiq_expand_more" />
</androidx.constraintlayout.widget.ConstraintLayout>