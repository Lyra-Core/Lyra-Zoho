<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/typing_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/siq_16"
    android:paddingStart="@dimen/siq_16"
    android:paddingRight="@dimen/siq_16"
    android:paddingEnd="@dimen/siq_16"
    android:paddingTop="@dimen/siq_8"
    android:paddingBottom="@dimen/siq_12">

    <TextView
        android:id="@+id/siq_typing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/siq_text_16"
        android:textStyle="italic"
        android:maxLines="1"
        android:maxLength="25"
        android:ellipsize="end">
    </TextView>

    <LinearLayout
        android:layout_width="35dp"
        android:layout_height="@dimen/siq_10"
        android:layout_gravity="bottom"
        android:gravity="center">

        <View
            android:id="@+id/siq_typing_circle1"
            style="@style/SalesIQ.View.typing_indication_style1"/>

        <View
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:id="@+id/siq_typing_circle2"
            style="@style/SalesIQ.View.typing_indication_style1"/>

        <View
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:id="@+id/siq_typing_circle3"
            style="@style/SalesIQ.View.typing_indication_style1"/>

    </LinearLayout>
</LinearLayout>