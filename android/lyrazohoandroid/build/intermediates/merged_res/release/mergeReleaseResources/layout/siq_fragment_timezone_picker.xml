<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="?attr/siq_backgroundcolor"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/siq_dialog_toolbar"
        style="?attr/siq_toolbar_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/siq_toolbar_height"
        android:minHeight="@dimen/siq_toolbar_height"
        app:popupTheme="@style/SalesIQ.PopupMenuStyle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/siq_timezone_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
