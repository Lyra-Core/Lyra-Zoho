<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_msg_text_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/siq_14"
    android:paddingLeft="@dimen/siq_14"
    android:paddingTop="@dimen/siq_10"
    android:paddingEnd="@dimen/siq_14"
    android:paddingRight="@dimen/siq_14"
    android:paddingBottom="@dimen/siq_10">

    <ImageView
        android:id="@+id/siq_system_generated_indication_icon"
        android:layout_width="@dimen/siq_18"
        android:layout_height="@dimen/siq_18"
        android:layout_marginTop="@dimen/siq_2"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/salesiq_failed_icon" />


    <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
        android:id="@+id/siq_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/siq_system_generated_indication_icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/siq_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SalesIQ.Style.ChatWindow_TextMessage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Sample text Hi" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/siq_message_status_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/siq_message_timetextview"
                style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="12:30PM" />

            <ImageView
                android:id="@+id/siq_message_status_icon"
                style="@style/SalesIQ.Style.ChatWindow_Message_Status_Icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/siq_message_timetextview"
                app:layout_constraintTop_toTopOf="@+id/siq_message_timetextview"
                app:layout_constraintStart_toEndOf="@+id/siq_message_timetextview"
                app:srcCompat="@drawable/salesiq_deliver" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
