<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_links"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/siq_links_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/siq_chat_card_image"
            style="@style/SalesIQ.Style.chatwindow_widget_image"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
            android:id="@+id/siq_links_flexbox_layout"
            style="@style/SalesIQ.Style.FlexboxLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/siq_chat_message_backgroundcolor_operator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_image">

            <TextView
                android:id="@+id/siq_chat_card_text"
                style="@style/SalesIQ.Style.chatwindow_widget_text" />

            <TextView
                android:id="@+id/siq_chat_card_links_timetextview"
                style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/siq_12"
                android:paddingLeft="@dimen/siq_12"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                tools:text="12:30PM" />
        </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/siq_chat_card_links_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/siq_2"
            android:layout_marginBottom="@dimen/siq_2"
            android:background="@drawable/salesiq_links_list_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/siq_links_flexbox_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/siq_chat_card_links_actionlist_parent"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/siq_4"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_links_holder">

        <LinearLayout
            android:id="@+id/siq_chat_card_links_actionlist_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/siq_1"
            android:background="@drawable/salesiq_actions_card_bg">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/siq_chat_card_links_actionlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/salesiq_actions_card_bg" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
