<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_rating_like"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/siq_chat_card_image"
        style="@style/SalesIQ.Style.chatwindow_widget_image"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
        android:id="@+id/siq_widget_like_flex_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/siq_14"
        android:paddingVertical="@dimen/siq_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_image">

        <TextView
            android:id="@+id/siq_widget_like_flex_card_text"
            style="@style/SalesIQ.Style.chatwindow_widget_text" />


        <TextView
            android:id="@+id/siq_widget_like_flex_timeView"
            style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            tools:text="12:30PM" />
    </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>


    <LinearLayout
        android:id="@+id/siq_chat_card_like_rating_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/siq_6"
        app:layout_constraintTop_toBottomOf="@+id/siq_widget_like_flex_layout">

        <LinearLayout
            android:id="@+id/siq_chat_card_like_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/siq_14">

            <ImageView
                android:id="@+id/siq_chat_card_like_icon"
                style="@style/SalesIQ.Style.widget_like_icon"
                app:srcCompat="@drawable/salesiq_vector_like_flat" />

            <TextView
                android:id="@+id/siq_chat_card_like_text"
                style="@style/SalesIQ.Style.widget_like_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/siq_chat_card_dislike_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/siq_14">

            <ImageView
                android:id="@+id/siq_chat_card_dislike_icon"
                style="@style/SalesIQ.Style.widget_dislike_icon"
                app:srcCompat="@drawable/salesiq_vector_dislike_flat" />

            <TextView
                android:id="@+id/siq_chat_card_dislike_text"
                style="@style/SalesIQ.Style.widget_dislike_text" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/siq_widget_like_timeView"
        style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/siq_4"
        android:layout_marginBottom="@dimen/siq_10"
        android:paddingStart="@dimen/siq_12"
        android:paddingEnd="@dimen/siq_14"
        android:textSize="@dimen/siq_text_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_like_rating_parent"
        tools:text="12:30PM" />
</androidx.constraintlayout.widget.ConstraintLayout>
