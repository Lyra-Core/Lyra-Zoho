<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_multiple_product_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:id="@+id/siq_chat_card_type_multiple_product_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/siq_backgroundcolor"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/siq_widget_multipleProduct_flex_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                    android:id="@+id/siq_widget_multipleProduct_flex_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/siq_14"
                    android:paddingVertical="@dimen/siq_10"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/siq_widget_multipleProduct_card_text"
                        style="@style/SalesIQ.Style.chatwindow_widget_text" />

                    <TextView
                        android:id="@+id/siq_widget_multipleProduct_timetextview"
                        style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                        android:paddingStart="12dp"
                        android:paddingLeft="12dp"
                        android:paddingEnd="0dp"
                        android:paddingRight="0dp"
                        tools:text="12:30PM" />
                </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
