<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_input_phone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/siq_chat_message_backgroundcolor_operator"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/siq_chat_card_image"
                style="@style/SalesIQ.Style.chatwindow_widget_image"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                android:id="@+id/siq_input_phone_flex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/siq_14"
                android:paddingVertical="@dimen/siq_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_image">

                <TextView
                    android:id="@+id/siq_input_phone_card_text"
                    style="@style/SalesIQ.Style.chatwindow_widget_text" />

                <TextView
                    android:id="@+id/siq_flex_input_phone_timetextview"
                    style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    tools:text="12:30PM" />

            </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>


            <LinearLayout
                android:id="@+id/siq_chat_card_input_phone_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                app:layout_constraintTop_toBottomOf="@+id/siq_input_phone_flex_layout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/siq_chat_card_input_ccode"
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:background="?attr/siq_chat_card_button_backgroundcolor"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/siq_chat_card_input_ccode_text"
                            style="@style/SalesIQ.Style.forms_input_countrycode_text" />

                        <ImageView
                            android:id="@+id/siq_chat_card_input_ccode_dropdown"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@drawable/salesiq_ic_dropdown" />

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="38dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/siq_6"
                            android:layout_marginLeft="@dimen/siq_6"
                            android:background="?attr/siq_chat_message_inputcard_separatorcolor" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/siq_chat_card_input_phone_edittext"
                        style="@style/SalesIQ.Style.forms_input_phone_edittext"
                        android:layout_toEndOf="@id/siq_chat_card_input_ccode"
                        android:layout_toRightOf="@id/siq_chat_card_input_ccode"
                        android:inputType="phone"
                        android:maxLines="1" />

                    <RelativeLayout
                        android:id="@+id/siq_chat_card_input_send_button"
                        android:layout_width="34dp"
                        android:layout_height="44dp"
                        android:layout_alignEnd="@+id/siq_chat_card_input_phone_edittext"
                        android:layout_alignRight="@id/siq_chat_card_input_phone_edittext"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="1dp"
                        android:layout_marginRight="1dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            app:srcCompat="@drawable/salesiq_widget_input_send" />
                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/siq_chat_card_input_errorview"
                    style="@style/SalesIQ.Style.forms_phone_error_text" />
            </LinearLayout>

            <TextView
                android:id="@+id/siq_input_phone_timetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/siq_12"
                android:paddingLeft="@dimen/siq_12"
                android:paddingEnd="@dimen/siq_14"
                android:paddingRight="@dimen/siq_14"
                android:paddingBottom="@dimen/siq_10"
                android:textSize="@dimen/siq_text_12"
                style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_input_phone_parent"
                tools:text="12:30PM" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
