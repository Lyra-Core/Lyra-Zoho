<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/siq_170"
    android:orientation="vertical"
    android:id="@+id/siq_chat_card_type_image">

    <androidx.cardview.widget.CardView
        android:id="@+id/siq_chat_card_type_image_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/transparent">

        <LinearLayout
            android:id="@+id/siq_chat_card_type_image_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="?attr/siq_chat_message_backgroundcolor_operator">

            <ImageView
                android:id="@+id/siq_chat_card_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/siq_170"
                android:scaleType="centerCrop"
                android:visibility="visible"/>

            <ProgressBar
                android:id="@+id/siq_chat_card_image_progressBar"
                android:layout_width="@dimen/siq_22"
                android:layout_height="@dimen/siq_22"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
