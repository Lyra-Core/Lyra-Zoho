<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/siq_cardview_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:contentPadding="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/siq_chat_message_backgroundcolor_operator"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:id="@+id/siq_chat_fileprovider_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="12dp"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/siq_chat_fileprovider_title_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/siq_10"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/siq_chat_fileprovider_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/livechat.chat.queue.banner.title"
                                android:textSize="@dimen/siq_text_16" />

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/siq_chat_fileprovider_text_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/siq_10"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/siq_chat_fileprovider_icon"
                                android:layout_width="@dimen/siq_20"
                                android:layout_height="@dimen/siq_20"
                                android:layout_marginEnd="@dimen/siq_8"
                                android:layout_marginRight="@dimen/siq_8"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/siq_chat_fileprovider_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/livechat.chat.queue.banner.title" />

                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/siq_att_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <RelativeLayout
                            android:id="@+id/siq_chat_card_image_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/siq_chat_card_image"
                                style="@style/SalesIQ.Style.chatwindow_widget_image" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/siq_image_action_parent"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/salesiq_attachment_download_bg"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/siq_image_action"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/salesiq_vector_play" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                        android:id="@+id/siq_widget_image_flex_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/siq_12"
                        android:paddingTop="@dimen/siq_10"
                        android:paddingBottom="@dimen/siq_8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/siq_chat_widget_image_card_text"
                            style="@style/SalesIQ.Style.chatwindow_widget_text" />

                        <TextView
                            android:id="@+id/siq_widget_image_timetextview"
                            style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                            android:paddingStart="12dp"
                            android:paddingLeft="12dp"
                            android:paddingEnd="0dp"
                            android:paddingRight="0dp"
                            android:gravity="bottom"
                            tools:text="12:30PM" />

                    </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siq_chat_card_links_actionlist_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:background="@drawable/salesiq_links_list_bg"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/siq_chat_message_backgroundcolor_operator">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/siq_chat_card_links_actionlist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/salesiq_links_list_bg" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
