<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/siq_tab_parent"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotationX="180"
    android:gravity="center">
    <ImageView
        app:srcCompat="@drawable/salesiq_vector_chat"
        android:id="@+id/siq_tab_icon"
        style="@style/SalesIQ.Style.conversation_tab_icon"/>
    <TextView
        android:id="@+id/siq_tab_text"
        style="@style/SalesIQ.Style.conversation_tab_text" />
</LinearLayout>