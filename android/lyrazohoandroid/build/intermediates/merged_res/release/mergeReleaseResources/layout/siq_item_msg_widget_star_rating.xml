<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_rating_star"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/siq_chat_message_backgroundcolor_operator"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:contentPaddingLeft="2dp"
        app:contentPaddingRight="2dp"
        app:contentPaddingTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="vertical"-->
            <!--                android:weightSum="1">-->

            <ImageView
                android:id="@+id/siq_chat_card_image"
                style="@style/SalesIQ.Style.chatwindow_widget_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                android:id="@+id/siq_star_widget_flex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/siq_14"
                android:paddingTop="@dimen/siq_8"
                android:paddingBottom="@dimen/siq_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_image">

                <TextView
                    android:id="@+id/siq_chat_card_text"
                    style="@style/SalesIQ.Style.chatwindow_widget_text" />


                <TextView
                    android:id="@+id/siq_star_widget_flex_timetextview"
                    style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                    android:paddingStart="12dp"
                        android:paddingLeft="12dp"
                        android:paddingEnd="0dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="@dimen/siq_1"
                        tools:text="12:30PM" />


                </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>

            <LinearLayout
                android:id="@+id/siq_chat_card_star_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/siq_star_widget_flex_layout">

                <RelativeLayout
                    android:id="@+id/siq_star_1_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/siq_star_1"
                        style="@style/SalesIQ.Style.widget_star" />
                </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/siq_star_2_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/siq_star_2"
                            style="@style/SalesIQ.Style.widget_star" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/siq_star_3_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/siq_star_3"
                            style="@style/SalesIQ.Style.widget_star" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/siq_star_4_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/siq_star_4"
                            style="@style/SalesIQ.Style.widget_star" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/siq_star_5_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/siq_star_5"
                            style="@style/SalesIQ.Style.widget_star" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/siq_star_6_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/siq_star_6"
                            style="@style/SalesIQ.Style.widget_star" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/siq_star_7_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/siq_star_7"
                            style="@style/SalesIQ.Style.widget_star" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/siq_star_8_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/siq_star_8"
                            style="@style/SalesIQ.Style.widget_star" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/siq_star_9_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/siq_star_9"
                            style="@style/SalesIQ.Style.widget_star" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/siq_star_10_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/siq_star_10"
                            style="@style/SalesIQ.Style.widget_star" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siq_star_widget_status_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_star_parent"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/siq_star_widget_timetextview"
                        style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                        android:paddingStart="@dimen/siq_12"
                        android:paddingLeft="@dimen/siq_12"
                        android:paddingEnd="@dimen/siq_12"
                        android:paddingRight="@dimen/siq_12"
                        android:paddingBottom="@dimen/siq_10"
                        android:textSize="@dimen/siq_text_12"
                        tools:text="12:30PM" />
                </LinearLayout>
            <!--            </LinearLayout>-->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
