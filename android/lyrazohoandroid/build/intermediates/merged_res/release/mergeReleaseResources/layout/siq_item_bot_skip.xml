<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/siq_chat_card_bot_skip_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="16dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp"
    android:visibility="visible"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/siq_skip_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/siq_skip_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/siq_16"
            android:paddingStart="@dimen/siq_16"
            android:paddingRight="@dimen/siq_16"
            android:paddingEnd="@dimen/siq_16"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/siq_skip_text"
                style="@style/SalesIQ.Style.Widget_bot_selection_skip_text" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
