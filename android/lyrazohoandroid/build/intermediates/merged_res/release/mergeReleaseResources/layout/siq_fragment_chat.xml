<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/siq_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/reopen_layout_divider">

        <LinearLayout
            android:id="@+id/siq_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="?attr/siq_chat_input_backgroundcolor">

            <LinearLayout
                android:id="@+id/siq_timer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/siq_timerclocktext"
                    style="@style/SalesIQ.Style.chatwindow_timer_clock_text"/>
            </LinearLayout>

            <View
                android:id="@+id/siq_bottom_layout_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/siq_divider_color" />


            <RelativeLayout
                android:id="@+id/siq_text_file_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:visibility="invisible">

                <RelativeLayout
                    android:id="@+id/siq_action_layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/siq_msg_input"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true">

                    <ImageView
                        android:id="@+id/siq_action_button"
                        style="@style/SalesIQ.Style.chatwindow_action_button"
                        app:srcCompat="@drawable/salesiq_vector_attach_file" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/siq_send_layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignBottom="@+id/siq_msg_input"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/siq_send_button"
                        style="@style/SalesIQ.Style.chatwindow_send_button"
                        app:srcCompat="@drawable/salesiq_vector_send" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/siq_msg_input"
                    style="@style/SalesIQ.Style.chatwindow_message_input_text"
                    android:layout_toStartOf="@+id/siq_send_layout"
                    android:layout_toEndOf="@+id/siq_action_layout" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/siq_bottom_layout">

            <FrameLayout
                android:id="@+id/siq_chat_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/siq_chatmessages_parentview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/siq_infoview_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/siq_connected_to_banner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingVertical="@dimen/siq_9"
                            android:paddingHorizontal="@dimen/siq_24"
                            android:layout_alignParentTop="true"
                            android:background="?attr/siq_chat_connected_to_banner_color"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/siq_connected_to_banner_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="@dimen/siq_text_14"
                                android:gravity="center"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:text="@string/mobilisten_chat_connected_to_operator_or_bot"
                                android:textColor="?attr/siq_chat_connected_to_banner_text_color" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/siq_noInternet_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/siq_9"
                            android:paddingBottom="@dimen/siq_9"
                            android:layout_below="@+id/siq_connected_to_banner"
                            android:background="?attr/siq_nointernetbanner_backgroundcolor"
                            android:visibility="gone"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ProgressBar
                                    android:id="@+id/siq_noInternet_progressBar"
                                    android:layout_width="@dimen/siq_12"
                                    android:layout_height="@dimen/siq_12"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/siq_1"
                                    android:indeterminate="true" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/siq_text_14"
                                    android:textColor="@color/white"
                                    android:layout_marginLeft="@dimen/siq_10"
                                    android:text="@string/livechat.message.waitingforconnection"
                                    android:layout_marginStart="@dimen/siq_10" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/siq_offline_message"
                            android:layout_below="@+id/siq_noInternet_layout"
                            style="@style/SalesIQ.Style.chatwindow_offline_message"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/siq_transfer_operator_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/siq_offline_message"
                            android:background="?attr/siq_handoffbanner_backgroundcolor"
                            android:paddingTop="@dimen/siq_15"
                            android:paddingBottom="@dimen/siq_15"
                            android:visibility="gone"
                            android:gravity="center"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.75"
                                android:layout_gravity="center">

                            <TextView
                                android:id="@+id/siq_transfer_content"
                                android:layout_marginLeft="@dimen/siq_15"
                                android:layout_marginStart="@dimen/siq_15"
                                android:text="@string/livechat.bot.connectwithhuman"
                                style="@style/SalesIQ.Style.chatwindow_transfer_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/siq_transfer_yes_parent"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="end"
                                android:orientation="horizontal"
                                android:layout_weight="0.25"
                                android:layout_gravity="center">

                                <LinearLayout
                                    android:id="@+id/siq_transfer_yes"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_marginEnd="@dimen/siq_16"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/siq_transfer_yes_text"
                                        style="@style/SalesIQ.Style.chatwindow_transfer_content_positive_text"
                                        android:text="@string/livechat.common.yes" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/siq_queue_parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/siq_transfer_operator_layout"
                            android:paddingLeft="@dimen/siq_14"
                            android:paddingStart="@dimen/siq_14"
                            android:paddingRight="@dimen/siq_8"
                            android:paddingEnd="@dimen/siq_8"
                            android:paddingTop="@dimen/siq_14"
                            android:paddingBottom="@dimen/siq_14"
                            android:weightSum="1"
                            android:visibility="gone"
                            android:background="?attr/siq_chat_queuebanner_backgroundcolor">

                            <LinearLayout
                                android:id="@+id/siq_queue_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="0.85"
                                android:layout_gravity="center_vertical">

                                <TextView
                                    android:id="@+id/siq_queue_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/siq_text_16"
                                    android:text="@string/livechat.chat.queue.banner.title">
                                </TextView>

                                <TextView
                                    android:id="@+id/siq_queue_subtitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/siq_5"
                                    android:textSize="@dimen/siq_text_14"
                                    android:text="@string/livechat.chat.queue.banner.calculating">
                                </TextView>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/siq_queue_position_layout"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="0.15"
                                android:gravity="center"
                                android:layout_gravity="center">

                                <LinearLayout
                                    android:id="@+id/siq_queue_position_parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:minWidth="@dimen/siq_50"
                                    android:orientation="vertical"
                                    android:gravity="center"
                                    android:padding="@dimen/siq_8"
                                    android:layout_gravity="center"
                                    android:background="@drawable/siq_queue_position_background">

                                    <TextView
                                        android:id="@+id/siq_queue_position"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/siq_text_16"
                                        android:text="01"/>

                                    <TextView
                                        android:id="@+id/siq_queue_position_subtitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/siq_text_10"
                                        android:text="@string/livechat.chat.queue.banner.position.subtitle" />

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/siq_advertise_badge_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="?attr/siq_backgroundcolor"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:padding="@dimen/siq_10">

                        <LinearLayout
                            android:id="@+id/siq_advertise_badge_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                            <ImageView
                                android:id="@+id/siq_advertise_badge_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/ic_salesiq_icon"
                                android:layout_gravity="center"/>
                            <TextView
                                android:id="@+id/siq_advertise_badge_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/siq_6"
                                android:layout_marginStart="@dimen/siq_6"
                                android:text="@string/salesiq.advertisebadge.content"
                                android:textSize="@dimen/siq_text_12"/>
                        </LinearLayout>

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/siq_chatmessagesrecylerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/siq_infoview_parent"
                        android:layout_above="@+id/siq_advertise_badge_parent"
                        android:clipToPadding="false"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:background="?attr/siq_backgroundcolor" />
                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/siq_messages_progress"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/siq_newmessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="#00949494"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/siq_newmessagetext"
                        style="@style/SalesIQ.Style.chatwindow_newmessage_text" />
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/siq_audio_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_alignParentBottom="true">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/siq_record_time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">

                    <View
                        android:id="@+id/siq_recording_icon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/salesiq_circle_bg" />

                    <TextView
                        android:id="@+id/siq_recording_time"
                        android:layout_toEndOf="@+id/siq_recording_icon"
                        android:layout_toRightOf="@+id/siq_recording_icon"
                        style="@style/SalesIQ.Style.chatwindow_recording_time" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/siq_slidecancel_view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/siq_record_cancel_swipe_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/salesiq_vector_nav_left" />

                    <TextView
                        android:id="@+id/siq_record_cancel_text"
                        android:text="@string/livechat.messages.record.slidetocancel"
                        style="@style/SalesIQ.Style.chatwindow_recording_cancel_text"/>
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:visibility="visible">

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp">

                    <RelativeLayout
                        android:id="@+id/siq_record_audio_anim_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_marginBottom="-5dp"
                        android:layout_marginEnd="-5dp"
                        android:layout_marginRight="-5dp"
                        android:background="@drawable/salesiq_circle_bg"
                        android:minHeight="60dp"
                        android:minWidth="60dp"
                        android:visibility="visible" />
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/siq_record_button_layout"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="-5dp"
                    android:layout_marginEnd="-5dp"
                    android:layout_marginRight="-5dp"
                    android:background="@drawable/salesiq_circle_bg"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/siq_record_button"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/salesiq_vector_mic" />
                </RelativeLayout>
            </FrameLayout>
        </FrameLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/siq_reopen_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="reopen_layout_divider, siq_reopen_button_text" />

    <View
        android:id="@+id/reopen_layout_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/siq_8"
        app:layout_constraintBottom_toTopOf="@+id/siq_reopen_button_text"
        android:background="?attr/siq_divider_color" />

    <TextView
        android:id="@+id/siq_reopen_button_text"
        android:text="@string/livechat.reopen.title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/SalesIQ.Style.chatwindow_continue_chat_button_text" />

