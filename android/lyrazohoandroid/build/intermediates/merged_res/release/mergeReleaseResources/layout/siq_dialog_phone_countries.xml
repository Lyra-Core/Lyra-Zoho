<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/siq_chat_card_input_phone_countries_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="?attr/siq_dialog_background_color"
        android:textColorHint="?attr/siq_hint_textcolor"
        android:maxLines="1"
        android:lines="1"
        android:focusable="true"
        android:hint="@string/livechat.widgets.input.phone.search.hint" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/siq_divider_color" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/siq_chat_card_input_phone_countries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
