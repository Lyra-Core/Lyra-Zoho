<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/siq_form_dept"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/siq_dept_input_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">

        <RelativeLayout
            android:id="@+id/siq_dept_text_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/salesiq_bg_form_idle"
            android:weightSum="1">

            <TextView
                android:id="@+id/siq_dept_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/livechat.messages.prechatform.traditional.dept.hint"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toStartOf="@+id/siq_dept_dropdown_icon"
                style="@style/SalesIQ.Style.forms_dept_edittext"
                android:layout_toLeftOf="@+id/siq_dept_dropdown_icon" />

            <ImageView
                android:id="@+id/siq_dept_dropdown_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/siq_18"
                android:layout_gravity="end|center_vertical"
                app:srcCompat="@drawable/salesiq_ic_dropdown"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/siq_18" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/siq_dept_label"
                android:text="Department"
                style="@style/SalesIQ.Style.forms_label_text"/>
            <TextView
                android:id="@+id/siq_dept_label_mandatory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingEnd="4dp"
                android:paddingRight="4dp"
                android:text="*"
                android:textSize="12sp"
                android:textStyle="normal"
                android:background="?attr/siq_forms_backgroundcolor"
                android:textColor="?attr/siq_forms_mandatory_star_icon_color"/>
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/siq_dept_input_error"
        android:layout_below="@id/siq_dept_input_parent"
        style="@style/SalesIQ.Style.forms_error_text" />
</RelativeLayout>
