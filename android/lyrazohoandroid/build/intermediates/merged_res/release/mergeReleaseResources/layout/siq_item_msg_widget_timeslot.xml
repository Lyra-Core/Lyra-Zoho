<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_timeslots"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/siq_chat_message_backgroundcolor_operator">

            <ImageView
                android:id="@+id/siq_chat_card_image"
                style="@style/SalesIQ.Style.chatwindow_widget_image"
                android:layout_marginHorizontal="2dp"
                android:layout_marginTop="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                android:id="@+id/siq_timeslot_flex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/siq_14"
                android:paddingEnd="@dimen/siq_14"
                android:paddingTop="@dimen/siq_10"
                android:paddingBottom="@dimen/siq_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_image">

                <TextView
                    android:id="@+id/siq_chat_card_text"
                    style="@style/SalesIQ.Style.chatwindow_widget_text" />

                <TextView
                    android:id="@+id/siq_timeslot_flex_timetextview"
                    style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    tools:text="12:30PM"
                    android:minHeight="@dimen/siq_8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>


            <TextView
                android:id="@+id/siq_timeslot_timetextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/siq_12"
                android:paddingLeft="@dimen/siq_12"
                android:paddingEnd="@dimen/siq_14"
                android:paddingRight="@dimen/siq_14"
                android:paddingBottom="@dimen/siq_10"
                android:textSize="@dimen/siq_text_12"
                app:layout_constraintBottom_toBottomOf="@+id/siq_timeslot_flex_layout"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="12:30PM" />

            <LinearLayout
                android:id="@+id/siq_timeslot_button_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="@dimen/siq_1"
                android:background="@drawable/salesiq_links_list_bg"
                android:paddingTop="@dimen/siq_13"
                android:paddingBottom="@dimen/siq_13"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/siq_timeslot_timetextview">

                <ImageView
                    android:id="@+id/siq_timeslot_calender_icon"
                    android:layout_width="18dp"
                    android:layout_height="@dimen/siq_18"
                    android:src="@drawable/siq_calendar_icon"
                    app:tint="?attr/colorAccent" />

                <TextView
                    android:id="@+id/siq_chat_card_button_text"
                    style="@style/SalesIQ.Style.chatwindow_widget_button_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/siq_6"
                    android:layout_marginLeft="@dimen/siq_6"
                    tools:text="Test" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
