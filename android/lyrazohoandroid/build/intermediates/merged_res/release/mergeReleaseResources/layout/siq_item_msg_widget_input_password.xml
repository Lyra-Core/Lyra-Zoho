<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_input_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/siq_chat_card_image"
        style="@style/SalesIQ.Style.chatwindow_widget_image"
        android:layout_marginHorizontal="2dp"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
        android:id="@+id/siq_input_password_flex_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/siq_14"
        android:paddingTop="@dimen/siq_10"
        android:paddingBottom="@dimen/siq_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_image">

        <TextView
            android:id="@+id/siq_input_password_card_text"
            style="@style/SalesIQ.Style.chatwindow_widget_text" />

        <TextView
            android:id="@+id/siq_flex_input_password_timetextview"
            style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
            android:paddingStart="12dp"
            android:paddingLeft="12dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            tools:text="12:30PM" />
    </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>

    <LinearLayout
        android:id="@+id/siq_chat_card_input_password_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/siq_input_password_flex_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/siq_chat_card_input_password_edittext"
                style="@style/SalesIQ.Style.widget_input_edittext"
                android:inputType="textPassword"
                android:maxLines="1" />

            <RelativeLayout
                android:id="@+id/siq_chat_card_input_password_visibilityLayout"
                android:layout_width="34dp"
                android:layout_height="44dp"
                android:layout_alignEnd="@+id/siq_chat_card_input_password_edittext"
                android:layout_alignRight="@id/siq_chat_card_input_password_edittext"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/siq_chat_card_input_password_visibilityIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/salesiq_visibility" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/siq_chat_card_input_errorview"
            style="@style/SalesIQ.Style.widget_error_text"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/siq_input_password_timetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/siq_12"
        android:paddingLeft="@dimen/siq_12"
        android:paddingEnd="@dimen/siq_12"
        android:paddingRight="@dimen/siq_12"
        android:paddingBottom="@dimen/siq_10"
        android:textSize="@dimen/siq_text_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_input_password_parent"
        tools:text="12:30PM" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_input_password_timetextview">

        <LinearLayout
            android:id="@+id/siq_chat_card_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/salesiq_links_list_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/siq_chat_card_button_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:text="@string/livechat.feedback.submit"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
