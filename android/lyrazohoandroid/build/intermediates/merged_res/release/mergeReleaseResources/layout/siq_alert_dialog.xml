<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/siq_dialog_background_color">

    <TextView
        android:id="@+id/siq_alert_dialog_title_text_view"
        style="@style/SalesIQ.Style.alert_dialog_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/mobilisten_file_upload_size_limit_exceeded" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/siq_alert_dialog_positive_button"
        style="@style/SalesIQ.Style.alert_dialog_positive_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siq_alert_dialog_title_text_view"
        tools:text="@string/mobilisten_common_okay" />
</androidx.constraintlayout.widget.ConstraintLayout>