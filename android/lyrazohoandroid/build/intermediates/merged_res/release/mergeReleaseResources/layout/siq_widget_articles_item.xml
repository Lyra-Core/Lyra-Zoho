<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/siq_chat_card_article_item_parent"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/siq_chat_card_article_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:srcCompat="@drawable/salesiq_vector_article" />

    <TextView
        android:id="@+id/siq_chat_card_article_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="22dp"
        android:layout_alignTop="@id/siq_chat_card_article_image"
        android:layout_toEndOf="@+id/siq_chat_card_article_image"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Test article" />
</RelativeLayout>
