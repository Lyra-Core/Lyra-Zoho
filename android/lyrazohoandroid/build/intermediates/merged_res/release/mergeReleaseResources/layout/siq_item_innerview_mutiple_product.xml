<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/paddingLayer"
        android:layout_width="@dimen/siq_56"
        android:layout_height="match_parent"
        android:background="?attr/siq_backgroundcolor"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/siq_chat_card_images_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/siq_170">

            <androidx.cardview.widget.CardView
                android:id="@+id/siq_chat_card_type_image_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/siq_12"
                android:layout_marginBottom="-12dp">

                <LinearLayout
                    android:id="@+id/siq_chat_card_type_image_parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/siq_chat_message_backgroundcolor_operator"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/siq_chat_card_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="visible" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/siq_chat_card_description_text_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="10dp"
            android:layout_marginTop="@dimen/siq_10">

            <TextView
                android:id="@+id/siq_chat_card_title_text"
                style="@style/SalesIQ.Style.chatwindow_widget_title_text" />

            <TextView
                android:id="@+id/siq_chat_card_subtitle_text"
                android:layout_marginTop="@dimen/siq_6"
                style="@style/SalesIQ.Style.chatwindow_widget_subtitle_text" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/siq_chat_card_actions_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/salesiq_links_list_bg" />

    </LinearLayout>
</LinearLayout>