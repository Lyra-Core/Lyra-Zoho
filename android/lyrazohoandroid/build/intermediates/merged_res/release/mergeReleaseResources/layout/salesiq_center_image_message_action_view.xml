<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/siq_msg_att_img_middleview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:elevation="2dp"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/siq_imgactionview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/salesiq_attachment_download_bg"
        android:visibility="visible">

        <ImageView
            android:id="@+id/siq_imgactionimage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/salesiq_download_arrow" />

        <com.zoho.livechat.android.ui.customviews.CircularProgressView
            android:id="@+id/siq_img_progressbar"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:max="100" />
    </RelativeLayout>

</RelativeLayout>