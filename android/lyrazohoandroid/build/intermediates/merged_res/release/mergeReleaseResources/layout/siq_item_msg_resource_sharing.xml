<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/resourceview_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/siq_1">

    <LinearLayout
        android:id="@+id/resourceview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/siq_15"
        android:paddingStart="@dimen/siq_15"
        android:paddingRight="@dimen/siq_15"
        android:paddingEnd="@dimen/siq_15"
        android:paddingTop="@dimen/siq_15"
        android:paddingBottom="@dimen/siq_10">

        <TextView
            android:id="@+id/resource_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/livechat.common.article">
        </TextView>

        <TextView
            android:id="@+id/resource_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/siq_15">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/siq_15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/creator_profile_icon"
                android:layout_width="@dimen/siq_20"
                android:layout_height="@dimen/siq_20"
                app:srcCompat="@drawable/salesiq_operator_default_light"
                android:background="@drawable/salesiq_circle_bg"
                android:layout_gravity="center">
            </ImageView>

            <TextView
                android:id="@+id/creator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:layout_marginLeft="@dimen/siq_10"
                android:layout_marginStart="@dimen/siq_10">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/siq_resource_sharing_status_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/siq_resource_sharing_timetextview"
                tools:text="12:30PM"
                style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
