<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siq_chat_card_type_single_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/siq_chat_message_backgroundcolor_operator"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/siq_chat_card_text_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/siq_backgroundcolor"
            android:orientation="vertical">

            <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                android:id="@+id/siq_single_product_flex_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/siq_14"
                android:paddingLeft="@dimen/siq_14"
                android:paddingTop="@dimen/siq_10"
                android:paddingEnd="@dimen/siq_14"
                android:paddingRight="@dimen/siq_14"
                android:paddingBottom="@dimen/siq_10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/siq_single_product_card_text"
                    style="@style/SalesIQ.Style.chatwindow_widget_text" />

                <LinearLayout
                    android:id="@+id/siq_single_product_flex_status_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp">

                    <TextView
                        android:id="@+id/siq_single_product_flex_timetextview"
                        style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                        tools:text="12:30PM" />
                </LinearLayout>
            </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>


            <LinearLayout
                android:id="@+id/siq_chat_card_images_list_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/siq_single_product_flex_layout">

                <FrameLayout
                    android:id="@+id/siq_chat_card_images_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/siq_170"
                    android:background="?attr/siq_chat_message_backgroundcolor_operator"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/siq_chat_card_images_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/scrollingIndicatorParent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="@dimen/siq_6"
                        android:padding="@dimen/siq_6">

                        <com.zoho.commons.PagerScrollingIndicator
                            android:id="@+id/scrollingIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/siq_chat_card_description_text_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    style="@style/SalesIQ.Style.FlexboxLayout">

                    <TextView
                        android:id="@+id/siq_chat_card_title_text"
                        android:layout_width="0dp"
                        style="@style/SalesIQ.Style.chatwindow_widget_title_text"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <View
                        android:id="@+id/spacer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/siq_4"
                        app:layout_constraintTop_toBottomOf="@+id/siq_chat_card_title_text" />

                    <com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout
                        android:id="@+id/siq_single_product_flex_description_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/spacer">

                        <TextView
                            android:id="@+id/siq_chat_card_subtitle_text"
                            style="@style/SalesIQ.Style.chatwindow_widget_subtitle_text" />

                        <TextView
                            android:id="@+id/siq_single_product_flex_description_timetextview"
                            style="@style/SalesIQ.Style.chatwindow_time_textcolor_operator"
                            tools:text="12:30PM"
                            android:paddingStart="12dp"
                            android:paddingLeft="12dp"
                            android:paddingEnd="0dp"
                            android:paddingRight="0dp" />

                    </com.zoho.livechat.android.ui.customviews.MobilistenFlexboxLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/siq_chat_card_actions_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/salesiq_links_list_bg" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
